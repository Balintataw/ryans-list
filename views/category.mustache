<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{{title}}</title>
        <link rel="stylesheet" href="/stylesheets/style.css" />
    </head>
    <body>
        <div class="big-wrapper">
            <div class="sidebar">
                {{>searchBar}}
            </div>
            <div class="category-wrapper">
                <h1>Las Vegas</h1>
                <h3>{{title}}</h3>
                <form action="{{title}}" >
                    <button type=submit name="gallery" value="gallery" class="{{view}}btn">Gallery</button>
                    <button type=submit name="list" value="list" class="{{view}}btn">List</button>
                    <button type=submit name="thumb" value="thumb" class="{{view}}btn">Thumbnail</button>
                </form>
                <form action="{{title}}">
                    <button type=submit name="recent" value="recent" class="">Recent</button>
                    <button type=submit name="highest" value="highest" class="">Highest Price</button>
                    <button type=submit name="lowest" value="lowest" class="">Lowest Price</button>
                </form>
                <a href="recent">Recent</a>
                <a href="highest">Highest</a>
                <a href="lowest">Lowest</a>
                <div class="{{view}}">
                    {{#listings}}
                        <div class="list-item-container">
                            {{#img}}<img src="/uploads/{{img}}" alt="" class="listing-image"/>{{/img}}
                            <a href="/listing/{{desc}}/{{listing_id}}"><h1 class="cat-title">{{desc}}</h1></a> 
                            {{#time}}<p class="cat-date">{{time}}</p>{{/time}}
                            {{#price}}<p class="cat-cost">${{price}}</p>{{/price}}
                            <p class="cat-content">{{cont}}</p>
                        </div>
                    {{/listings}}
                </div>
            </div>
            <div class="sidebar-right">
                {{>sortBar}}
            </div>
        </div>
        <script type="text/javascript" href="/javascripts/scripts.js"></script> 
    </body>
</html>