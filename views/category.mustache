<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{{title}}</title>
        <link rel="stylesheet" href="/stylesheets/style.css" />
    </head>
    <body>
        <div class="big-wrapper">
            <div class="sidebar">
                {{>searchBar}}
            </div>
            <div class="category-wrapper">
                <h1>Las Vegas</h1>
                <div class="cat-container">
                    {{#descriptions}}
                        <div class="list-item-container">
                            <h1 class="cat-title">{{.}}</h1>
                            {{#contents}}
                                <p class="cat-content">{{.}}</p>
                            {{/contents}}
                        </div>
                    {{/descriptions}}
                </div>
            </div>
            <div class="sidebar-right">
                {{>sortBar}}
            </div>
        </div>
        <script type="text/javascript" href="/javascripts/scripts.js"></script> 
    </body>
</html>