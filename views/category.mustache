<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{{title}}</title>
        <link rel="stylesheet" href="/stylesheets/style.css" />
    </head>
    <body>
        <div class="big-wrapper">
            <div class="sidebar">
                {{>searchBar}}
            </div>
            <div class="category-wrapper">
                <h1>Las Vegas</h1>
                <h3>{{title}}</h3>
                <div class=dropdown-container>
                    <div class="dropdown">
                        <span>View By:</span>
                        <div class="dropdown-content">
                            <a href="/{{slug}}/gallery/{{sort}}">Gallery</a><br>
                            <a href="/{{slug}}/list/{{sort}}">List</a><br>
                            <a href="/{{slug}}/thumb/{{sort}}">Thumbs</a><br>
                        </div>
                    </div>
                    <div class="dropdown">
                        <span>Sort By:</span>
                        <div class="dropdown-content">
                            <a href="/{{slug}}/{{view}}/recent">Recent</a><br>
                            <a href="/{{slug}}/{{view}}/lowest">Price Lowest</a><br>
                            <a href="/{{slug}}/{{view}}/highest">Price Highest</a><br>
                        </div>
                    </div>
                </div>
                <div class="{{view}}">
                    {{#listings}}
                        <div class="list-item-container">
                            {{#img}}<img src="/uploads/{{img}}" alt="" class="listing-image"/>{{/img}}
                            <a href="/listing/{{list_slug}}/{{listing_id}}"><h1 class="cat-title">{{desc}}</h1></a> 
                            {{#time}}<p class="cat-date">{{time}}</p>{{/time}}
                            {{#price}}<p class="cat-cost">${{price}}</p>{{/price}}
                            <h6>Posted By: {{created_by}}</h6>
                            <p class="cat-content">{{cont}}</p>
                        </div>
                    {{/listings}}
                </div>
            </div>
            <div class="sidebar-right">
                {{>sortBar}}
            </div>
        </div>
        <script type="text/javascript" href="/javascripts/scripts.js"></script> 
    </body>
</html>