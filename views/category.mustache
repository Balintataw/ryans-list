<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{{title}}</title>
        <link rel="stylesheet" href="/stylesheets/style.css" />
    </head>
    <body>
        <div class="big-wrapper">
            <div class="sidebar">
                {{>searchBar}}
            </div>
            <div class="category-wrapper">
                <h1>Las Vegas</h1>
                <h3>{{title}}<h3>
                <div class="cat-container">
                    {{#listings}}
                        <div class="list-item-container">
                            <h1 class="cat-title">{{desc}}</h1>
                            {{#img}}<img src="/uploads/{{img}}" alt="" class="listing-image"/>{{/img}}
                            <p class="cat-content">{{cont}}</p>
                        </div>
                    {{/listings}}
                </div>
            </div>
            <div class="sidebar-right">
                {{>sortBar}}
            </div>
        </div>
        <script type="text/javascript" href="/javascripts/scripts.js"></script> 
    </body>
</html>